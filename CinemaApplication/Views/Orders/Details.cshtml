@model Cinema.Domain.DomainModels.Order

<div class="container">
    <h2>Tickets in order with id @Model.Id</h2>
    <div>
        <a class="btn btn-success">Order for @Model.User.Email</a>
    </div>
    @for (int i = 0; i < Model.TicketsInOrder.Count(); i++)
    {
        var item = Model.TicketsInOrder.ElementAt(i).Ticket;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }


            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.MovieImage" style="height: 50%" alt="Image for movie!" />

                    <div class="card-body">
                        <h3 class="card-title">@item.MovieName @item.MovieYear</h3>
                        <p class="card-text">@item.MovieGenre</p>
                        <p class="card-text">Start: @item.StartDate</p>
                        <p class="card-text">End: @item.EndDate</p>

                        <h6>Price: @item.TicketPrice</h6>
                    </div>
                </div>
            </div>
            if (i % 3 == 2)
            {
            @:</div>
        }
    }
</div>