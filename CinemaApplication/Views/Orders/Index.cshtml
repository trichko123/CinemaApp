@{
}

@model List<Cinema.Domain.DomainModels.Order>

<div class="container">

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Number of tickets</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active Tickets</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.Email</td>
                            <td>@item.TicketsInOrder.Count()</td>
                            <td><a asp-action="Details" asp-route-orderId="@item.Id" class="btn btn-info">Details</a></td>
                            <td><a asp-action="CreateInvoice" asp-route-orderId="@item.Id" class="btn btn-info">Create Invoice</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>